<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouthWorkHub" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/green_accent</item>
        <item name="colorPrimaryVariant">@color/green_accent_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/neutral_gray</item>
        <item name="colorSecondaryVariant">@color/neutral_gray_darker</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white_variant</item>
        <item name="android:textViewStyle">@style/primaryTextStyle</item>
        <item name="android:textColor">@color/black_variant</item>
    </style>

    <style name="outlinedRoundedButtons" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/default_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/default_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/default_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/default_radius</item>
        <item name="boxStrokeColor">@color/green_accent</item>
        <item name="hintTextColor">@color/green_accent</item>
    </style>

    <style name="primaryButtonStyle">
        <item name="backgroundTint">@color/green_accent</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">@dimen/primary_btn_width</item>
        <item name="android:layout_height">@dimen/primary_btn_height</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="primaryTextStyle">
        <item name="android:textColor">@color/black_variant</item>
    </style>

</resources>